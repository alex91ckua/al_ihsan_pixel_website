<tr>
  <th scope="row"><%= product.name %></th>
  <td>
    <%= form_for order_item do |f| %>
      <div class="row" >
        <div class="col-md-3" >
          <%= f.number_field :quantity, value: order_item.quantity.to_i, class: 'form-control', min: 1 %>
          <%= f.hidden_field :product_id, value: product.id %>
        </div>
        <div class="col-md-4" >
          <%= f.submit 'Update', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </td>
  <td><%= number_to_currency order_item.unit_price %></td>
  <td><%= number_to_currency order_item.total_price %></td>
  <td>
    <%= form_for order_item do |f| %>
      <%= link_to order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete } do %>
        <i class="far fa-times-circle"></i>
      <% end %>
    <% end %>
  </td>
</tr>

