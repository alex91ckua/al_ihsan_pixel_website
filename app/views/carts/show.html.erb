<% content_for :body_class, "page" %>

<div class="container" >

  <h1>Cart</h1>

  <!--You're about to buy: <strong><%= product_qty %> Pixels</strong>-->

  <table class="table table-hover">
    <thead>
    <tr>
      <th scope="col">Product Type</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <th scope="row">Al-Ihsan Foundation Pixel</th>
      <td><%= product_qty %></td>
      <td>$<%= total_amount / 100 %></td>
    </tr>
    </tbody>
  </table>

  <hr>
  <div class="text-right" >
    <%= link_to 'Proceed to Checkout', new_charge_path, class: 'btn-yellow' %>
  </div>


</div>

