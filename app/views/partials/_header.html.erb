<header class="header">
  <div class="container">
    <div class="row">
      <div class="header-top  col-12">
        <div class="header-top__languages">
          <a class="language  language--current" href="#">English</a>
          <a class="language" href="#">Arabic</a>
        </div>
        <div class="header-top__socials">
          <a class="social" href="<%= Setting.twitter %>" target="_blank"><i class="fab fa-twitter"></i></a>
          <a class="social" href="<%= Setting.youtube %>" target="_blank"><i class="fab fa-youtube"></i></a>
          <a class="social" href="<%= Setting.facebook %>" target="_blank"><i class="fab fa-facebook-f"></i></a>
        </div>
      </div>
      <nav class="header-nav  navbar  navbar-expand-lg col-12">
        <%= link_to root_path, :class => 'navbar-brand' do %>
          <img src="<%= asset_path('logo.png') %>" alt="Al Ihsan Foundation">
      <% end %>

        <button class="navbar-toggler  collapsed" type="button" data-toggle="collapse" data-target="#navbarHeader" aria-controls="navbarHeader" aria-expanded="false" aria-label="Toggle navigation">
          <span class="toggler-icon"></span>
          <span class="toggler-icon"></span>
          <span class="toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarHeader">
          <ul class="navbar-nav mr-0 ml-auto">
            <li class="nav-item">
              <!-- Data text needed for hover effects -->
              <%= link_to 'About', root_path(:anchor => 'about'), :class => 'nav-link', :data => { :letters => 'About' } %>
            </li>
            <li class="nav-item">
              <%= link_to 'About project', root_path(:anchor => 'about'), :class => 'nav-link', :data => { :letters => 'About project' } %>
            </li>
            <li class="nav-item">
              <%= link_to 'Recent Sponsors', root_path(:anchor => 'sponsors'), :class => 'nav-link', :data => { :letters => 'Recent Sponsors' } %>
            </li>
            <li class="nav-item">
              <%= link_to 'FAQ', root_path(:anchor => 'faq'), :class => 'nav-link', :data => { :letters => 'FAQ' } %>
            </li>
            <li class="nav-item">
              <%= link_to 'Receipts', root_path(:anchor => 'receipts'), :class => 'nav-link', :data => { :letters => 'Receipts' } %>
            </li>
            <li class="nav-item">
              <%= link_to 'Buy a Pixel Now', root_path(:anchor => 'buy-now'), :class => 'nav-btn', :data => { :text => 'Buy a Pixel Now' } %>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</header>